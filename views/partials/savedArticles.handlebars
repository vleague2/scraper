<div class="col-sm-12">
    <div class="card mb-4">
        <div class="card-header">
            {{!-- pull title out of database json and then add the link as an a href--}}
            <a href={{link}} class="article-title">{{title}}</a>
        </div>
        <div class="card-body">
            {{!-- pull teaser text out of database json --}}
            <p><b>Article summary: </b>{{teaser}}</p>
            <p><b>Note:</b> {{note.body}}</p>
            <button class="btn btn-secondary add-note" id="{{_id}}">Add a Note</button>
            <button class="btn btn-danger remove" id="{{_id}}">Remove Article</button>
        </div>
    </div>      
</div>